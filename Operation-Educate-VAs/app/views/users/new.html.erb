<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <title></title>
        <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
 <link rel="stylesheet" href="/resources/demos/style.css">
        <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
 <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
 <script>
 $( function() {
   $( ".datepicker" ).datepicker();
 } );
 </script>
    </head>
    <body>
        <%= form_with model: @user, local: true do |f| %>
        <div class="tab">Name:
          <%= f.text_field :fname %>

          <%= f.text_field :lname %>
        </div>
        <div class="tab">Contact-Info:
          <%= f.label :email %>
          <%= f.text_field :email %><br/>

          <%= f.label :va_number %>
          <%= f.text_field :va_number %><br/>
        </div>
            <%= f.fields_for :questionaire, @user.questionaire do |quest| %>
            <div class="tab">Personal-Info:
              <div class="field">
                <%= quest.label :date_of_birth %>
                <%= quest.text_field :date_of_birth, class:"datepicker", type:"text" %>
              </div>
              <div class="field">
                <%= quest.label :sex %>
                <%= quest.text_field :sex %>
              </div>
              <div class="field">
                <%= quest.label :city %>
                <%= quest.text_field :city %>
              </div>
            </div>
            <div class="tab">Military History:
              <div class="field">
                <%= quest.label :military_start_date %>
                <%= quest.text_field :military_start_date, class:"datepicker", type:"text" %>
              </div>
              <div class="field">
                <%= quest.label :time_in_combat_in_months %>
                <%= quest.text_field :time_in_combat %>
              </div>
              <div class="field">
                <%= quest.label :discharge_date %>
                <%= quest.text_field :discharge_date, class:"datepicker", type:"text" %>
              </div>
            </div>
              <div class="field">
                <%= quest.label :dependents %>
                <%= quest.text_field :dependents %>
              </div>
              <div class="field">
                <%= quest.label :education_level %>
                <%= quest.text_field :education_level %>
              </div>

              <div class="field">
                <%= quest.label :Part_Time_or_Fulltime_Or_Online %>
                <%= quest.text_field :part_online_fulltime %>
              </div>
            <%end%>

          <%= f.submit "Sign Up"%>
        <% end %>
    </body>
</html>
